.msg-wrap {
    position: relative;
    overflow: hidden;
}

.msg {
    justify-content: center;
    align-items: center;
    background: #fff;
    padding: 20rpx;
    overflow: hidden;
    transition: transform 0.2s;
}

.avatar-wrap {
    position: relative;
}

.avatar-wrap .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 40rpx;
}

.avatar-wrap .number {
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    text-align: center;
    border-radius: 50%;
    background-color: #f12c20;
    border: 1rpx solid #fff;
    font-size: 24rpx;
    color: #fff;
    position: absolute;
    right: 40rpx;
    top: -2rpx;
}

.name {
    font-size: 34rpx;
    font-weight: bold;
}

.desc {
    color: #999;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 70vw;
    font-size:24rpx;
}

.action {
    position: absolute;
    right: -50vw;
    top: 0;
    bottom: 0;
    width: 50vw;
    align-items: center;
    background: #666;
    color: #fff;
    transition: all 0.2s;
    font-size: 26rpx;
}

.advice {
    width: 90%;
    margin: 0 auto;
    background-color: #fff;
    padding: 40rpx 20rpx;
    border-radius: 10rpx;
    z-index: 99;
    position: absolute;
    top: 25%;
    left: 5%;
}

.advice .textarea {
    border: 1rpx solid #e6e6e6;
    border-radius: 10rpx;
    width: 100%;
    height: 300rpx;
    padding: 20rpx;
    box-sizing: border-box;
}

.advice .submit {
    width: 100%;
    margin-top: 40rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 10rpx;
    background: #03b9bb;
    color: #fff;
    text-align: center;
    font-size: 32rpx;
}
