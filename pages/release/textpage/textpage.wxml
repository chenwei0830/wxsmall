<view class="page">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <textarea class="weui-textarea" placeholder="有些爱，一直都很安静......" maxlength="-1" style="height:25rem;" value="{{textAreaContent}}" bindinput="btnComplete"/>
        <view class="weui-textarea-counter">已输入{{textAreaObj.fontNum}}字</view>
      </view>
    </view>
  </view>
  <view class="page__hd">
    <view class="weui-flex" style='margin:10px;'>
      <view class="weui-flex__item">
        <image class="btn-back" src="{{btnBackClazz.btnImg}}" />
      </view>
      <view class="weui-flex__item">
        <image class="btn-submit" src="{{btnSubmitClazz.btnImg}}"/>
      </view>
    </view>
  </view>
</view>