.content {
    padding: 30rpx 20rpx;
}

.content .keep-img {
    width: 260rpx;
    height: 200rpx;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    margin-right: 30rpx;
}

.keep-info {
    width: 420rpx;
    position: relative;
}

.keep-info .title, .keep-info .intro {
    line-height: 100%;
}

.keep-info .title {
    font-size: 32rpx;
}

.keep-info .intro {
    color: #999;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    margin-top: 16rpx;
    line-height: 30rpx;
}

.keep-info .icon-wrap {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    line-height: 100%;
}

