}



.art-list .art-item {
    padding: 20rpx 0 0 30rpx;
    justify-content: center;
    align-items: center;
    background: #fff;
    overflow: hidden;
    transition: transform 0.2s;
}

.action {
    position: absolute;
    right: -25vw;
    top: 0;
    bottom: 0;
    width: 25vw;
    align-items: center;
    background: #666;
    color: #fff;
    transition: all 0.2s;
    font-size: 26rpx;
}


