.detail-list .ft {
    display: flex;
    height: 90rpx;
    align-items: center;
    font-size: 14px;
}

.bdr-top,
.bdr-bottom {
    position: relative
}

.bdr-top:before {
    height: 1px;
    content: '';
    width: 100%;
    position: absolute;
    top: -1px;
    right: 0;
    transform: scaleY(0.5);
    z-index: 10;
}

.bdr-bottom:after {
    height: 1px;
    content: '';
    width: 100%;
    position: absolute;
    bottom: -1px;
    right: 0;
    transform: scaleY(0.5);
    z-index: 10;
}

.detail-list .ft .btn {
    flex: 1;
    text-align: center;
    color: #999;
}

.detail-list .ft .btn-text {
    display: inline-block;
    text-align: left;
    background-repeat: no-repeat;
    padding-left: 50rpx;
    background-size: auto 60%;
    line-height: 60rpx;
    box-sizing: border-box;
    white-space: nowrap;
}

