@keyframes commentaries {
    from {
        opacity: 0;
        transform: scaleY(0);
    }

    to {
        opacity: 1;
        transform: scaleY(1);
    }
}

.commentaries {
    transform-origin: 0 0;
    background: #efefef;
    margin-top: 30rpx;
    /* padding: 20rpx; */
    position: relative;
    animation: commentaries 0.2s;
}

.commentaries:before {
    position: absolute;
    left: 100rpx;
    top: -18rpx;
    font-size: 0;
    line-height: 0;
    border-width: 10px;
    border-color: #efefef;
    border-top-width: 0;
    border-style: dashed;
    border-bottom-style: solid;
    border-left-color: transparent;
    border-right-color: transparent;
    content: '';
}

.commentaries .com-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 1rpx solid #fff;
    background-size: cover;
    background-repeat: no-repeat;
    margin-right: 26rpx;
}

.commentaries .com-name {
    color: #999;
}

.commentaries .com-name text {
    font-size: 22rpx;
    margin-left: 10rpx;
}

.commentaries .com-content {
    color: #666;
    line-height: 34rpx;
    margin-top: 10rpx;
}

.commentaries .com-time {
    margin-top: 40rpx;
}

.commentaries .com-time view, .commentaries .com-time view text {
    color: #999;
}

.commentaries .com-time .com-like {
    background-image: url(http://oj1itelvn.bkt.clouddn.com/like1.png);
    padding-left: 50rpx;
    background-position: left center;
    background-size: 34rpx;
    /* padding-right: 20rpx; */
    color: #999;
    background-repeat: no-repeat;
}

.commentaries .com-time .com-like.active {
    background-image: url(http://oj1itelvn.bkt.clouddn.com/zan1.png);
}

.video {
    height: 420rpx;
    width: 100%;
    background-color: #999;
    background-image: url(http://oj1itelvn.bkt.clouddn.com/art/icon-video1.png);
    background-size: 100rpx;
    background-repeat: no-repeat;
    background-position: center center;
}
.click {
    position: absolute;
    bottom: 14rpx;
    left: 30rpx;
    right: 0;
    color: #fff;
    background-color: rgba(0,0,0,.5);
    width: 70rpx;
    min-width: 70rpx;
    height: 40rpx;
    border-radius: 35rpx;
    font-size: 26rpx;
    line-height: 40rpx;
    text-align: center;
}
.commentaries .reply {
    font-size: 28rpx;
    color: #03b9bb;
    padding: 6rpx 20rpx;
    background-color: #eee;
    margin-right: 40rpx;
}