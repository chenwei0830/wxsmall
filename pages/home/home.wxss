.category {
    left: 0;
    right: 0;
    top: 0;
    font-size: 0;
    line-height: 0;
    white-space: nowrap;
    background-color: #fff;
    position: fixed;
    z-index: 10000;
}
.myVideo {
    height: 560rpx;
    width: 100%;
}
.category scroll-view {
    background-color: #fff;
    line-height: 50px;
    height: 50px;
    position: relative;
    width: 100%;
}

.category scroll-view .cat-tag {
    position: absolute;
    left: 0;
    top: 88rpx;
    width: 0;
    height: 2px;
    background: #02bbbd;
    transition: all 0.1s;
    z-index: 99;
}

.category scroll-view .item {
    display: inline-block;
    padding: 0 30rpx;
    position: relative;
    transition: all 0.1s;
    font-size: 32rpx;
    box-sizing: border-box;
}

.category scroll-view .item:first-child {
    /* margin-left: 30rpx; */
}

.category scroll-view .item.active {
    color: #02bbbd;
    /* transform: scale(1.1); */
    transform-origin: 50% 100%;
    font-weight: bold;
    font-style: unset;
}

