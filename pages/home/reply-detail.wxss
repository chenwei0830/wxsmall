/* pages/home/reply-detail.wxss */

page {
    background: #fff;
}

.container {
    padding: 20rpx 30rpx;
}

.header .avatar {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    border: 1rpx solid #e6e6e6;
    background-size: cover;
    background-repeat: no-repeat;
}

.header .name {
    color: #686868;
    font-size: 34rpx;
    /* line-height: 100%; */
}

.header .name text {
    font-size: 24rpx;
    color: #999;
    background: #efefef;
    padding: 6rpx 16rpx;
    line-height: 100%;
    /* vertical-align: middle; */
    border-radius: 10rpx;
    display: inline-block;
    transform-origin: center;
    transform: scale(0.9);
}

.header .time-wrap {
    line-height: 100%;
}

.header .time-wrap text {
    /* font-size:26rpx; */
    color: #999;
    line-height: 100%;
}

.reply {
    margin-top: 40rpx;
    padding: 0 50rpx 0 110rpx;
    line-height: 40rpx;
    color: #666;
}

.reply-wrap {
    background: #f5f5f5;
    margin-top: 40rpx;
}

.reply-wrap .title {
    color: #999;
    padding: 20rpx 20rpx 0;
}

.reply-wrap .reply-item {
    padding: 20rpx 30rpx;
}

.reply-wrap .reply-item .avatar {
    border: 1rpx solid #fff;
}

.reply-wrap .reply-item .name {
    font-size: 28rpx;
    color: #999;
}

.reply-wrap .reply-item .time-wrap text {
    font-size: 26rpx;
}

.reply-wrap .reply-item .time-wrap {
    position: relative;
}

.reply-wrap .reply-item .time-wrap .com-like {
    position: absolute;
    right: 0;
    bottom: 0;
    top: 0;
    background-image: url(http://oj1itelvn.bkt.clouddn.com/like1.png);
    padding-left: 50rpx;
    background-position: left center;
    background-size: 34rpx;
    /* padding-right: 20rpx; */
    color: #999;
    background-repeat: no-repeat;
    line-height: 36rpx;
}

.reply-wrap .reply-item .time-wrap .com-like.active {
    background-image: url(http://oj1itelvn.bkt.clouddn.com/zan1.png);
}

.reply-wrap .reply-item .time-wrap .huif {
    color: #03b9bb;
    margin-left: 6rpx;
}

.reply-wrap .reply-item .detail {
    font-size: 26rpx;
    color: #666;
    line-height: 34rpx;
}

.edit {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 99;
    background: #fff;
    border-top: 1rpx solid #e6e6e6;
    padding: 20rpx;
}

.edit .edit-input {
    height: 80rpx;
    line-height: 80rpx;
    background: #eee;
    border-radius: 10rpx;
    margin-right: 40rpx;
}

.edit .edit-input input {
    width: 100%;
    height: 100%;
    padding: 0 20rpx;
}

.edit .edit-smile {
    width: 80rpx;
    color: #03b9bb;
    font-size: 32rpx;
}
