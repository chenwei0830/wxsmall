.tabbar_box {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 120rpx;
    border-top: 1rpx solid gray;
}

.tabbar_nav {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    height: 100%;
    position: relative
}

.tabbar_icon {
    width: 61rpx;
    height: 61rpx;
}

.tabbar_big {
    width: 100rpx;
    height: 100rpx;
}

.tabbar_msg {
    position: absolute;
    background: #f00;
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    color: #fff;
    z-index: 10;
    display: inline-block;
    top: 6rpx;
    right: 22rpx;
    font-size: 8pt;
    text-align: center;
    line-height: 38rpx;
    border: 1rpx solid #fff;
}
