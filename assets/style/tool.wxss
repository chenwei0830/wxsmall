.del {
    position: relative;
    display: inline-block;
}

.del:after {
    display: block;
    position: absolute;
    content: '';
    top: 0;
    bottom: 50%;
    left: 0;
    right: 0;
    border-bottom: solid 1px #888;
    transform: rotate(-2deg);
}

