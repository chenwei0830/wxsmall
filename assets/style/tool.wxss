.touch-bottom {
    text-align: center;
    position: relative;
    color: #888;
    margin: 20px 0;
}

.touch-bottom:before {
    display: block;
    content: '';
    position: absolute;
    top: 50%;
    left: 15%;
    right: 65%;
    height: 1px;
    background-color: #dfddd9;
}

.touch-bottom:after {
    display: block;
    content: '';
    position: absolute;
    top: 50%;
    left: 65%;
    right: 15%;
    height: 1px;
    background-color: #dfddd9;
}

.arrow-right {
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    background-color: rgba(255, 255, 255, 0);
    border-top: solid 6rpx #bbb;
    border-right: solid 6rpx #bbb;
    transform: rotate(45deg) scale(0.5);
    vertical-align: middle;
}

.arrow-right.down {
    transform: rotate(135deg) scale(0.5) translateY(50%);
}

.arrow-right.up {
    transform: rotate(-45deg) scale(0.5);
}


@keyframes c-loading{
    from{
        transform:scale(.8) rotate(0)
    }
    to{
        transform:scale(.8) rotate(360deg)
    }
}
.c-loading {
    text-align: center;
    position: relative;
    height: 20px;
    background-image: url(http://img.zhxcxmall.com/c-loading.gif?t=12);
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
    opacity: .6;
    margin-top: 10px;
}

.c-loading.white:after {
    background-image: url(http://img.zhxcxmall.com/static/loading-white.png);
}

.c-loading.top {
    position: fixed;
    left: 0;
    right: 0;
    top: 10vh;
    z-index: 1001;
}

.c-loading.bottom {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 10vh;
    z-index: 1001;
}

.c-mask {
    position: fixed;
    background: rgba(0, 0, 0, 0.5);
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 9;
}

.c-mask .c-loading {
    margin-top: 40vh;
}

.c-mask.opacity {
    background: rgba(0, 0, 0, 0);
}

.c-mask.white {
    background: rgba(255, 255, 255, 0.7);
}

